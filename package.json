      "js",
      "json",
      "ts"
    ],
    "testRegex": "(spec|test)[.]js",
    "coverageDirectory": "../coverage",
    "setupFiles": [
      "./test/setupJest.js"
    ],
    "collectCoverageFrom": [
      "./src/**"
    ]
  },
  "staticFiles": {
    "staticPath": [
      {
        "staticPath": "static",
        "staticOutDir": "static"
      }
    ]
